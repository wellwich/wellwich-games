		"hono": "^4.6.10",
		"honox": "^0.1.26",
		"husky": "^9.1.7",
		"jest-canvas-mock": "^2.5.2",
		"jest-environment-jsdom": "^29.7.0",
		"jsdom": "^25.0.1",
		"lint-staged": "^15.2.10",
		"phaser": "^3.86.0",
		"phaser3spectorjs": "^0.0.8",
		"postcss": "^8.4.49"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@cloudflare/workers-types": "^4.20240529.0",
